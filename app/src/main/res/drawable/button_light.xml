<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="@color/button_light" />
            <stroke
                android:width="1dp"
                android:color="@color/button_light_pressed" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="@color/button_light"
                android:endColor="@color/button_light_pressed"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/button_light_pressed" />
        </shape>
    </item>
</selector>