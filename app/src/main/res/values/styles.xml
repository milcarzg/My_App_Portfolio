<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"></style>

    <style name="title">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">35dp</item>
        <item name="android:textSize">25dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_light">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/button_light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:onClick">sendMessage</item>
    </style>

    <style name="button_dark">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:onClick">sendMessage</item>
    </style>

</resources>
